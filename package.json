{
  "name": "core-service",
  "version": "1.0.0",
  "description": "main backend service to serve content and actions",
  "main": "src/app.ts",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.spec.ts'",
    "test:ci": "nyc npm run test",
    "dev": "nodemon",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint -c .eslintrc.json",
    "start": "ts-node .",
    "initDB": "ts-node ./src/initDB.ts"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests/**/*.spec.ts",
      "src/app.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "excludeNodeModules": true,
    "branches": 0,
    "lines": 0,
    "functions": 0,
    "statements": 0
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skiosa/core-service.git"
  },
  "keywords": [
    "core-service"
  ],
  "author": "skiosa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skiosa/core-service/issues"
  },
  "homepage": "https://github.com/skiosa/core-service#readme",
  "devDependencies": {
    "@danmasta/mocha-sonar": "^1.0.1",
    "@graphql-tools/schema": "^8.3.6",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "class-validator": "^0.13.2",
    "dataloader": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "skiosa-orm": "github:skiosa/orm#v1.0.0",
    "type-graphql": "^1.2.0-rc.1",
    "type-graphql-dataloader": "^0.5.0",
    "typeorm": "^0.3.4"
  }
}