{
  "name": "core-service",
  "version": "1.0.0",
  "description": "main backend service to serve content and actions",
  "main": "src/app.ts",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.spec.ts'",
    "test:ci": "nyc npm run test",
    "dev": "nodemon",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint -c .eslintrc.json --fix .",
    "start": "ts-node .",
    "initDB": "ts-node ./src/initDB.ts",
    "newman": "./tests/integration/test.sh",
    "test:all": "npm run-script test && npm run-script newman"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests/**/*.spec.ts",
      "src/app.ts",
      "src/initDB.ts",
      "src/util/initDB.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "excludeNodeModules": true,
    "branches": 0,
    "lines": 0,
    "functions": 0,
    "statements": 0
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skiosa/core-service.git"
  },
  "keywords": [
    "core-service"
  ],
  "author": "skiosa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skiosa/core-service/issues"
  },
  "homepage": "https://github.com/skiosa/core-service#readme",
  "devDependencies": {
    "@danmasta/mocha-sonar": "^1.0.1",
    "@graphql-tools/schema": "^8.3.6",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/shuffle-seed": "^1.1.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "graphql": "^15.8.0",
    "graphql-custom-types": "^1.6.0",
    "jsonwebtoken": "^8.5.1",
    "keycloak-connect": "^17.0.1",
    "keycloak-connect-graphql": "^0.7.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "shuffle-seed": "^1.1.6",
    "skiosa-orm": "github:skiosa/orm.git#v1.2.5",
    "type-graphql": "^1.2.0-rc.1",
    "type-graphql-dataloader": "^0.5.0",
    "typeorm": "^0.3.4"
  }
}
